@model List<DTO.Models.MedarbejderDTO>

@{
    ViewBag.Title = "Afdelinger";
    var afdelinger = ViewBag.Afdelinger as List<DTO.Models.AfdelingDTO>;
    int? selectedAfdelingId = ViewBag.SelectedAfdelingId as int?;
    var selectedAfdeling = ViewBag.SelectedAfdeling as DTO.Models.AfdelingDTO;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h4 class="text-primary">Vælg en afdeling</h4>
    @using (Html.BeginForm())
    {
        @Html.DropDownList(
                 "afdelingDropdown",
                 new SelectList(afdelinger.Prepend(new DTO.Models.AfdelingDTO { Id = 0, Navn = "Alle afdelinger" }), "Id", "Navn", selectedAfdelingId ?? 0),
                 new { @class = "form-control mb-3", onchange = "this.form.submit();" }
                 )
    }

    @if (Model != null && Model.Count > 0)
    {
        <h5 class="text-secondary mt-4">Medarbejdere</h5>
        <ul class="list-group">
            @foreach (var medarbejder in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@medarbejder.Navn</strong> (@medarbejder.Initial) - @medarbejder.Afdeling.Navn
                    </div>
                    <div>
                        <a href="@Url.Action("ShowTidsregistrering", "Time", new { medarbejderId = medarbejder.Id })" class="btn btn-outline-secondary btn-sm">
                            Vis tidsregistreringer
                        </a>
                        <a href="@Url.Action("AddTidsregistrering", "Time", new { medarbejderId = medarbejder.Id })" class="btn btn-outline-primary btn-sm ml-2">
                            Tilføj tidsregistreringer
                        </a>
                    </div>
                </li>
            }
        </ul>
    }
    else if (selectedAfdelingId.HasValue)
    {
        <p class="text-muted mt-4">Ingen medarbejdere fundet for denne afdeling.</p>
    }
</div>
